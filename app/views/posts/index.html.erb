<p style="color: green"><%= notice %></p>

<h1 class="text-center text-white">Forecasts by date</h1>
<div class="row">
	<% @posts.each do |post| %>
		<div class="col">
			<div class="card bg-dark text-white">
				<div class="card-body">
					<h5 class="card-title"><%= post.title %></h5>
					<ul class="list-group">
						<% post.daycasts.each do |c| %>
							<li class="list-group-item bg-dark text-white border-0"><%= c.cast %></li>
						<% end %>
					</ul>
					<div class="mt-3">
						<%= link_to 'View', post_path(post), class: 'btn btn-outline-light' %>
					</div>
				</div>
			</div>
		</div>
	<% end %>
</div>
